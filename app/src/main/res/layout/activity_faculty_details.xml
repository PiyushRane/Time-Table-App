<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    tools:context=".FacultyDetails">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/MainToolbar"
        app:titleTextColor="@color/White"
        android:id="@+id/ToolBarFacultyDetails"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/MainToolbar"
        android:layout_below="@+id/ToolBarFacultyDetails"
        android:id="@+id/facultyTop">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/ivFaculty"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/White"
            android:layout_height="wrap_content"
            android:text="Faculty Name"
            android:textSize="24dp"
            android:id="@+id/tvFacultySelected"
            android:textAlignment="center"
            android:layout_below="@+id/ivFaculty"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            />
            
    </RelativeLayout>

    <androidx.cardview.widget.CardView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:elevation="4dp"
        android:layout_marginTop="10dp"
        android:id="@+id/CardView1"
        android:layout_below="@+id/facultyTop">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="@color/White"
                android:id="@+id/tvPhoneNumberLabel"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="1sp"
                android:id="@+id/line"
                android:layout_below="@+id/tvPhoneNumberLabel"
                android:background="@color/lightGray"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234567890"
                android:id="@+id/tvPhoneNumber"
                android:textSize="20sp"
                android:textColor="@color/White"
                android:layout_below="@+id/line"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:textIsSelectable="true"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:elevation="4dp"
        android:layout_marginTop="10dp"
        android:id="@+id/CardView2"
        android:layout_below="@+id/CardView1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:id="@+id/tvEmailLabel"
                android:textColor="@color/White"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="1sp"
                android:id="@+id/line2"
                android:layout_below="@+id/tvEmailLabel"
                android:background="@color/lightGray"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="abc@gmail.com"
                android:id="@+id/tvEmail"
                android:textColor="@color/White"
                android:textSize="20sp"
                android:layout_below="@+id/line2"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:textIsSelectable="true"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:elevation="4dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/CardView2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Staff Room"
                android:textColor="@color/White"
                android:id="@+id/tvPlaceLabel"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="1sp"
                android:id="@+id/line3"
                android:layout_below="@+id/tvPlaceLabel"
                android:background="@color/lightGray"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A-304, Faculty Building"
                android:id="@+id/tvPlace"
                android:textSize="20sp"
                android:layout_below="@+id/line3"
                android:textColor="@color/White"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:textIsSelectable="true"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>